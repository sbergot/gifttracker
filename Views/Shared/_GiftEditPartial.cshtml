<div class="modal fade" id="gift-edit" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                <span>
                    &times;
                </span>
                </button>
                <h4 class="modal-title">Edit gift</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="gift-edit-title">Title</label>
                        <input type="email" class="form-control" id="gift-edit-title" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <label for="gift-edit-description">Description</label>
                        <input type="password" class="form-control" id="gift-edit-description" placeholder="Description">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>